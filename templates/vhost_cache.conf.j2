{% include 'vhost.conf.j2' %}

# OpenLiteSpeed Cache Configuration
modules {{
  module cache {{
    enable               1
    checkPrivateCache   1
    checkPublicCache    1
    maxCacheObjSize     10000000
    maxStaleAge         200
    qsCache             1
    reqCookieCache      1
    respCookieCache     1
    ignoreReqCacheCtrl  1
    ignoreRespCacheCtrl 0
  }}
}}

cache {{
  enableCache         1
  expireInSeconds     3600
  enablePrivateCache  0
  privateExpireInSeconds 3600
}}

